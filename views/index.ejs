</script>

</head>

<body style="background-color: black;">
  <%- include('nav.ejs') %>

  <div id="id_myFirst" value="<%= tagline %>">this is div</div>
  

<div style="width:95%;  margin: 0 auto; margin-top: 20px;">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img style="width:100%;height: 650px;" src="../static/images/House.jpg" alt="First slide">
            
        </div>
        <div class="carousel-item">
            <img style="width:100%;height: 650px;" src="../static/images/header5.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img style="width:100%;height: 650px;" src="../static/images/header1.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

</div>
  

  <div class="d-flex flex-row">
      
    <div class="card-columns p-2" style="width: 70%; margin-top: 20px;" >
      <% rows.forEach(function(row) { %>
      <div class="card" style="height: 25rem; max-width: 20rem;">
        <img class="card-img-top" style="height: 14rem;" src="data:image/png;base64,<%=row.ImageData%>" alt="Card image cap">
        
        <div class="card-body card-footer">
          <div class="">
            <h5 class="card-title"><strong><%= row.FirstName %></strong></h5>
            <li>Email: <%= row.Email %>,</li>
            <li>Age <%= row.Age %></li>
            
            <input type="button" value="Read More" onclick="myFunction()"/> 
            
          </div>
          <form action="/wishlist" method="post">
            <input type="hidden" id="postId" name="itemId" value="<%= row.Personid %>">
          <button type="submit" class="btn btn-warning">Add To WishList</button>
          </form>
          
        </div>
      </div>
      <% }); %>
      
    </div>
    
    
    <div  id="readMe" class="p-2" style="width: 25%; margin-top: 28px; margin-left: 50px; height: 51rem; background-color: white;"> this is me
      <strong><h5 id="name" class="card-title"></h5></strong>
    </div>



  </div>

      

      <div class="jumbotron">
        <h1>This is great</h1>
        <p>Welcome to templating using EJS</p>
    
        <h2>Variable</h2>
        <p><%= tagline %></p>
      </div>
      
      <input type="button" value="Result" onclick="display()"/>  
      
</form> 
<script src="../static/main.js"></script>

</body>